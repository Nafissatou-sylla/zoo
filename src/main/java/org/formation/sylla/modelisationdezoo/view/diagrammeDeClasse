@startuml

class Zoo {
-animals : ArrayList<Case> 
+afficherAnimals()
+donnerAManger()
+AfficherDeNouveau() 

}

Abstract class Animal{
-nom: String
-age: int
-poids: double

+{abstract} manger()
+{abstract} dormir()
+{abstract} grossir(poids: double): double
+{abstract} perdreDuPoids(poids: double: double 
}

class Lion{
+sauter() 
+courir()
+crier() : String
+devorer()
}

class Singe {
+sauter() 
+crier(): String
}

class Gazelle {
-longueurCornes: double

+courir()
}

class Cage{
-lesCage: Animals[]

+cageVide()
+ouvrirCage()
+sortirUnAnimal()
+fermerCage()

}

class Visiteur {
-nombreDeVisiteur: int
}

Zoo -- " animals 0--n" Animal
Zoo o-- "  0--n  cages" Cage
Visiteur "0--10  visiteurs" -- Zoo
Animal <|-- Lion
Animal <|-- Singe
Animal <|-- Gazelle

@enduml
