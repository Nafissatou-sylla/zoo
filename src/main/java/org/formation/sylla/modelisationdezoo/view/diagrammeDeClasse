@startuml

class Zoo {
-cages: ArrayList<Case> 

+afficherAnimals()
+donnerAManger()
+AfficherDeNouveau() 

}

Abstract class Animal{
-nom: String
-age: int
-poids: double

+{abstract} manger()
+{abstract} dormir()
+{abstract} grossir(poids: double): double
+{abstract} perdreDuPoids(poids: double: double 
}

class Lion{
+sauter() 
+courir()
+crier() : String
+devorer()
}

class Singe {
+sauter() 
+crier(): String
}

class Gazelle {
-longueurCornes: double

+courir()
}

class Cage{
-animal: Animal

+cageVide()
+ouvrirCage()
+sortirUnAnimal()
+fermerCage()

}

class Visiteur {
-nombreDeVisiteur: int
}

Zoo o-- " 0--n animals" Animal
Zoo o-- "0--n  cages" Cage
Cage o-- " 1 animal" Animal
Visiteur "0--10  visiteurs" -- Zoo
Animal <|-- Lion
Animal <|-- Singe
Animal <|-- Gazelle

@enduml
